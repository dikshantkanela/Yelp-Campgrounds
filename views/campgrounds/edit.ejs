<% layout("layouts/boilerplate.ejs") %>

<h1 class="text-center">Edit Campground</h1>
<div class="col-6 offset-3">
  <!-- SEND A PUT REQUEST TO THE /CAMPGROUNDS ROUTE SO THAT THE CAMPGROUND IS UPDATED -->
  <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
    <div class="mb-3">
      <label class="form-label" for="title">Enter Title:</label>
      <input class="form-control" id="title" value="<%= campground.title %>" type="text" name="campground[title]">
    </div>

    <div class="mb-3">
      <label class="form-label" for="location">Enter Location:</label>
      <input class="form-control" id="location" value="<%= campground.location %>" type="text" name="campground[location]">
    </div>

    <div class="mb-3">
      <label class="form-label" for="image">Image URL:</label>
      <input class="form-control" id="image" value="<%= campground.image %>" type="text" name="campground[image]">
    </div>

    <div class="mb-3">
      <label for="price">Campground Price:</label>
    </div>
    <div class="input-group mb-3">
      <span class="input-group-text" id="price-label">$</span>
      <input id="price" type="text" class="form-control" value="<%= campground.price %>" name="campground[price]" placeholder="0.0" aria-label="price" aria-describedby="price-label">
    </div>

    <div class="mb-3">
      <label class="form-label" for="description">Enter Description:</label>
      <textarea class="form-control" id="description" name="campground[description]"><%= campground.description %></textarea>
    </div>

    <div class="mb-3">
      <button class="btn btn-danger">Update Campground</button>
    </div>

    <a href="/campgrounds/<%= campground._id %>">Back to Campground</a>
  </form>
</div>
